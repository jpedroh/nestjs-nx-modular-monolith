{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@modular-monolith/modules/order-api": [
        "libs/modules/order-api/src/index.ts"
      ],
      "@modular-monolith/modules/order-impl": [
        "libs/modules/order-impl/src/index.ts"
      ],
      "@modular-monolith/modules/user-api": [
        "libs/modules/user-api/src/index.ts"
      ],
      "@modular-monolith/modules/user-impl": [
        "libs/modules/user-impl/src/index.ts"
      ],
      "@modular-monolith/shared/monitoring": [
        "libs/shared/monitoring/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
